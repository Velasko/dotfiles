{
    "*.py": {
        "colorcolumn": 80,
        "softwrap": false
    },
    "*.yml": {
        "tabsize": 2,
        "tabstospaces": true
    },
    "colorscheme": "atom-dark",
    "hlsearch": true,
    "indentchar": ".",
    "lsp.server": "python=jedi-language-server,rust=rust-analyzer",
    "lsp.formatOnSave": true,
    "lsp.tabcompletion": true,
    "lsp.ignoreTriggerCharacters": "completion,signature",
    "lsp.autocompleteDetails": false,
    "mkparents": true,
    "parsecursor": true,
    "rmtrailingws": true,
    "savecursor": true,
    "scrollbar": true,
    "softwrap": true,
    "tabmovement": true
}
